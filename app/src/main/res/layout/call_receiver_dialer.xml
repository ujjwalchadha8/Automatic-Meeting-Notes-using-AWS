<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/voiceCallLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:text="Make-A-Note Voice Call"
        android:fontFamily="sans-serif"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/callerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voiceCallLabel"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif"
        android:text="John Smith"/>
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/callerName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="01:23"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/callerImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message"
        android:layout_margin="12dp"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/message"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/ic_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/endCall"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/colorPrimary"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/speaker"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/ic_speaker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/endCall"
        app:layout_constraintBottom_toTopOf="@id/endCall"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/colorPrimary"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/mute"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/ic_mic_mute"
        app:layout_constraintLeft_toRightOf="@id/endCall"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/endCall"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/colorPrimary"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/endCall"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/ic_call_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/ytRed"
        android:padding="12dp"/>


    <ImageView
        android:id="@+id/answerCall"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/ic_done"
        app:layout_constraintLeft_toRightOf="@id/endCall"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/colorPositive"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/answerCallLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/answerCall"
        app:layout_constraintLeft_toLeftOf="@id/answerCall"
        app:layout_constraintRight_toRightOf="@id/answerCall"
        android:text="Accept"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:layout_marginTop="3dp"/>

    <ImageView
        android:id="@+id/declineCall"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/ic_cross"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/endCall"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/ytRed"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/declineCallLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/declineCall"
        app:layout_constraintLeft_toLeftOf="@id/declineCall"
        app:layout_constraintRight_toRightOf="@id/declineCall"
        android:text="Decline"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:layout_marginTop="3dp"/>

</android.support.constraint.ConstraintLayout>